[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  # shortcut to list all aliases for git
  la = !git config -l | grep alias | cut -c 7-

  # aliases for the most common commands
  br = branch
  co = checkout
  ci = commit
  s = status -s -uno
  st = status

  # alias to perform a minor fix to the last commit w/o
  # actually changing the commit message.
  caan = commit --all --amend --no-edit

  # alias to "undo" adding of files for a commit or
  # actually undoing the last commit and leaving the files staged.
  unstage = reset HEAD --
  undo = reset --soft HEAD^

  # alias to set upstream branch
  pushup = "!git push --set-upstream origin $(git symbolic-ref --short HEAD)"

  # alias to list contributors with number of commits
  contrib = shortlog --summary --numbered

  # aliases to provide different views of the commit log.
  last = log -1 HEAD --graph
  ll = log --pretty=format:'%C(yellow)%h %C(red)%d %C(reset)%s %C(blue)[%cn]' --decorate --numstat
  ls = log --pretty=format:'%C(yellow)%h %C(red)%d %C(reset)%s %C(blue)[%cn]' --decorate
  le = log --oneline --decorate
  fl = log -u
  dl = !git ll -1
  dlc = diff --cached HEAD^

  # aliases to find the first buggy commit in a branch-based
  # workflow.
  bis = bisect
  bisb = bisect bad
  bisg = bisect good
  bisr = bisect reset
  biss = bisect start

[grep]
  lineNumber = true
  patternType = extended

[pull]
  default = current

[push]
  default = current
  followTags = true

[core]
  autocrlf = input
  editor = vim
