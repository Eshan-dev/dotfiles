[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  # shortcut to list all aliases for git
  la = !git config -l | grep alias | cut -c 7-

  # aliases for the most common commands
  br = branch
  co = checkout
  ci = commit
  s = status -s -uno
  st = status

  # alias to perform a minor fix to the last commit without
  # actually changing the commit message
  caan = commit --all --amend --no-edit

  # alias to "undo" adding of files for a commit or
  # actually undoing the last commit and leaving the files staged
  unstage = reset HEAD --
  undo = reset --soft HEAD^

  # aliases to configure local branch to origin repository
  pushup = !git push -u origin $(git symbolic-ref --short HEAD)
  branchup = !git branch -u origin $(git symbolic-ref --short HEAD)

  # alias to list contributors with number of commits
  contributors = shortlog --summary --numbered

  # aliases to provide different views of the commit log
  last = log -1 HEAD
  lg = log --pretty=format:'%C(yellow)%h %C(reset)-%C(red)%d %C(reset)%s %C(magenta)(%cr) %C(blue)[%cn]' --graph
  ll = log --pretty=format:'%C(yellow)%h %C(red)%d %C(reset)%s %C(blue)[%cn]' --decorate --numstat
  ls = log --pretty=format:'%C(yellow)%h %C(red)%d %C(reset)%s %C(blue)[%cn]' --decorate
  le = log --oneline --decorate
  dc = diff --cached HEAD
  dlc = diff --cached HEAD^

  # aliases for rare commands
  mark = bisect
  smod = submodule

  # aliases to flag files that are not in .gitignore
  flag = update-index --assume-unchanged
  unflag = update-index --no-assume-unchanged

[grep]
  lineNumber = true
  patternType = extended

[pull]
  default = current
  rebase = true

[push]
  default = current
  followTags = true

[core]
  autocrlf = input
  editor = vim
